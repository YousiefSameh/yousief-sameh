{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layout/*": ["src/layout/*"],
			"@pages/*": ["src/pages/*"],
			"@routes/*": ["src/routes/*"],
			"@store/*": ["src/store/*"],
			"@styles/*": ["src/styles/*"],
			"@customTypes/*": ["src/types/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
